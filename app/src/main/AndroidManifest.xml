    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:networkSecurityConfig="@xml/network_security_config">
        <activity android:name=".course.CourseDetailedActivity"></activity>
        <activity android:name=".course.CourseActivity" />
        <activity android:name=".instructor.InstructorDetailedActivity" />
        <activity android:name=".instructor.InstructorActivity" />
        <activity android:name=".ui.updateschedule.DetailedScheduleUpdate" />
        <activity
            android:name=".ScheduleActivity"
            android:label="@string/title_activity_schedule"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".MainActivity" />
        <activity android:name=".ui.homeschedule.DetailedActivity" />
    </application>

</manifest>